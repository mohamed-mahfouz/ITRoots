@model ITRoots.Models.User

<h2>Save</h2>


@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm" }))
{
    if (Model != null && Model.Id != Guid.Empty)
    {
        @Html.HiddenFor(u => u.Id)
    }

    <div class="form-group">
        <label>First Name</label>
        @Html.TextBoxFor(u => u.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        <label>Last Name</label>
        @Html.TextBoxFor(u => u.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        <label>User name</label>
        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(u => u.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(u => u.FirstName)
    </div>

    <div>
        <input type="submit"/ value="Save">
    </div>
}